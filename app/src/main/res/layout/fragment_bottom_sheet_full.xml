<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BottomSheetFull">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_layout_bottom_sheet">

        <Button
            android:id="@+id/btnSwipe"
            android:layout_width="80dp"
            android:layout_height="4dp"
          android:layout_centerHorizontal="true"
            android:background="@drawable/swipe"
            android:layout_marginTop="12dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvLocationList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btnSwipe"
            android:layout_marginTop="20dp" />


    </RelativeLayout>


</RelativeLayout>